<h2>Relat√≥rio de vendas</h2>
<canvas class="line-chart"></canvas>
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.1.1/dist/chart.min.js"></script>
<script>
    const enderecoRelatorioVendas = "https://localhost:5001/Gestao/RelatorioDeVendas/"
    const labels = []
    const data = []
    $.post(enderecoRelatorioVendas, (dados, status) => {
        dados.forEach(dado => {
            labels.push(dado.data)
            data.push(dado.total)
        })

        const canvas = $(".line-chart")

        const grafico = new Chart(canvas, {
            type: "line",
            data: {
                labels,
                datasets: [{
                    label: "Total de vendas em R$",
                    data,
                    borderWidth: 12
                }]
            }
        })
    })
</script>